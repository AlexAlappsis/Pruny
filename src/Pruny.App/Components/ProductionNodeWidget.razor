@using Blazor.Diagrams.Components.Renderers
@using Blazor.Diagrams.Core.Geometry
@using Blazor.Diagrams.Core.Models
@using Pruny.Core.Models
@using Pruny.App.Components

<div class="production-node @(Node.Selected ? "selected" : "")">
    <div class="node-header">
        @Node.Title
    </div>
    <div class="node-content">
        <div class="info-row">
            <span class="label">Recipe:</span>
            <span class="value">@RecipeName</span>
        </div>
        @if (Cost > 0)
        {
            <div class="info-row">
                <span class="label">Cost:</span>
                <span class="value">@Cost.ToString("F2")</span>
            </div>
        }
    </div>
    
    <div class="node-ports">
        @foreach (var port in Node.Ports)
        {
            <PortRenderer Port="port" />
        }
    </div>
</div>

<style>
    .production-node {
        background-color: #252526;
        border: 1px solid #484850;
        border-radius: 4px;
        box-shadow: 0 4px 6px rgba(0,0,0,0.3);
        color: #e0e0e0;
        min-width: 200px;
        display: flex;
        flex-direction: column;
    }
    
    .production-node.selected {
        border-color: var(--accent-color);
        box-shadow: 0 0 0 2px rgba(100, 108, 255, 0.3);
    }

    .node-header {
        background-color: #333333;
        padding: 8px 12px;
        border-bottom: 1px solid #484850;
        font-weight: bold;
        border-radius: 4px 4px 0 0;
    }

    .node-content {
        padding: 12px;
        font-size: 0.9rem;
    }

    .info-row {
        display: flex;
        justify-content: space-between;
        margin-bottom: 4px;
    }

    .label {
        color: #888;
        margin-right: 8px;
    }

    .node-ports {
        position: relative;
        height: 20px;
    }
</style>

@code {
    [Parameter] public ProductionNodeModel Node { get; set; } = null!;

    private string RecipeName => Node.ProductionLine?.RecipeId ?? "Unknown";
    private decimal Cost => Node.Calculation?.CostPerUnit ?? 0;
}
